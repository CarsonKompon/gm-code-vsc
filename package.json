{
    "name": "gm-code-vsc",
    "version": "0.1.0",
    "displayName": "Gm Code",
    "description": "A simple manager for Gms2 files in Visual Studio Code.",
    "engines": {
        "vscode": "^1.42.0"
    },
    "publisher": "jack",
    "activationEvents": [
        "onView:gmVfs"
    ],
    "contributes": {
        "views": {
            "explorer": [
                {
                    "id": "gmVfs",
                    "name": "Gm Code"
                }
            ]
        },
        "commands": [
            {
                "command": "gmVfs.openScript",
                "title": "Open"
            },
            {
                "command": "gmVfs.createScript",
                "title": "New Script",
                "category": "Create Resource",
                "enablement": "view == gmVfs && viewItem == folderItem"
            },
            {
                "command": "gmVfs.createObject",
                "title": "New Object",
                "category": "Create Resource"
            },
            {
                "command": "gmVfs.createFolder",
                "title": "New Folder",
                "category": "Create Folder"
            },
            {
                "command": "gmVfs.deleteFolder",
                "title": "Delete",
                "category": "Delete"
            }
        ],
        "menus": {
            "view/item/context": [
                {
                    "command": "gmVfs.createScript",
                    "when": "view == gmVfs && viewItem == folderItem",
                    "group": "createResource"
                },
                {
                    "command": "gmVfs.createObject",
                    "when": "view == gmVfs && viewItem == folderItem",
                    "group": "createResource"
                },
                {
                    "command": "gmVfs.createFolder",
                    "when": "view == gmVfs && viewItem == folderItem",
                    "group": "folderOp"
                },
                {
                    "command": "gmVfs.deleteFolder",
                    "when": "view == gmVfs && viewItem == folderItem",
                    "group": "zdelete"
                }
            ]
        }
    },
    "main": "out/index.js",
    "scripts": {
        "vscode:prepublish": "npm run compile",
        "compile": "tsc -p ./",
        "watch": "tsc -watch -p ./"
    },
    "author": "Jonathan Spira <jjspira@gmail.com>",
    "license": "MIT",
    "devDependencies": {
        "@types/node": "^14.0.27",
        "nodemon": "^2.0.4",
        "ts-node": "^8.10.2",
        "typescript": "^3.9.7",
        "@types/rimraf": "^2.0.2",
        "@types/vscode": "^1.45.0",
        "yy-boss-ts": "file:../yy-boss-ts"
    }
}
